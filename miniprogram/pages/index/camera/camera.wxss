.photo-view{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.takePhoto{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx; 
  background-color: #00cc77;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title{
  text-align: center;
  font-size: 16px;
}
.item-view{
  padding: 5px;
  width: 90%;
  height: 280rpx;
  margin: 20px auto;
  border-radius: 10px;
  box-shadow: 0px 0px 10px #D3D3D3;
}
.name{
  font-size: 14px;
  padding: 10rpx 0;
}
.type{
  font-size: 13px;
  padding: 6rpx 0;
}
.tips{
  font-size: 13px;
}
.tips_l{
  float: left;
  height: 200rpx;
}
.tips_r{
  height: 200rpx;
}